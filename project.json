{
  "authors": [ "ClockWritesDev" ],
  "version": "0.0.2-SNAPSHOT",

  "sources": [ "src/**" ],
  "output": "build",

  "targets" : {
    "Aero3": {
			"type": "prepare",
      "script-dir": "./",
			"exec": ["python ./BuildDep.py version=0.0.2-SNAPSHOT"]
		},
    "X11-HelloWorld-Aero3": {
      "name": "HelloWorld-Aero3",
      "linked-libraries" : [ "GL", "X11", "m" ],
      "type": "executable", 
      "sources": [ "test/01-HelloWindow/**" ] 
    },
    "Windows-HelloWorld-Aero3": {
      "name": "HelloWorld-Aero3",
      "linked-libraries" : [ "opengl32", "gdi32", "kernel32", "user32" ], 
      "type": "executable", 
      "sources": [ "test/01-HelloWindow/**" ] 
    }
  },

  "cpu": "generic",
  "opt": "O0"
}